algoritmo "semnome"
// Função :Ler um número e imprimir se ele é positivo, negativo ou nulo

var
 numero: real
 
inicio
escreval("Digite um número")
leia(numero)
se (numero >0) entao
   escreval ("Positivo")
senao
  se (numero <0) entao
     escreval ("Negativo")
   senao
   escreval("Nulo")
 fimse
fimse


fimalgoritmo
